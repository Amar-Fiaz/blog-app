{
  "dashboard": {
    "title": "Blog App - DevOps Monitoring",
    "tags": ["blog-app", "kubernetes", "nodejs"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Application Pods Status",
        "type": "stat",
        "targets": [
          {
            "expr": "count(kube_pod_info{namespace=\"blog-app\", pod=~\"blog-app.*\"})",
            "legendFormat": "Running Pods"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{namespace=\"blog-app\", pod=~\"blog-app.*\"}[5m])",
            "legendFormat": "{{pod}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 3,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{namespace=\"blog-app\", pod=~\"blog-app.*\"}",
            "legendFormat": "{{pod}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 4,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{namespace=\"blog-app\"}[5m])",
            "legendFormat": "{{method}} {{path}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 5,
        "title": "Pod Restart Count",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(kube_pod_container_status_restarts_total{namespace=\"blog-app\"})",
            "legendFormat": "Restarts"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 6,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_activity_count{namespace=\"blog-app\"}",
            "legendFormat": "Active Connections"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
